<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ambergleam.petfinder">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".PetfinderApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/bowl"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ambergleam.petfinder.controller.MainActivity"
            android:label="@string/activity_main_title"
            android:icon="@drawable/ic_launcher"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.DetailsActivity"
            android:label="@string/activity_details_title">
        </activity>
        <activity
            android:name="com.ambergleam.petfinder.controller.FavoritesActivity"
            android:label="@string/activity_favorites_title">
        </activity>
        <activity
            android:name="com.ambergleam.petfinder.controller.SettingsActivity"
            android:label="@string/activity_settings_title">
        </activity>

    </application>

</manifest>
