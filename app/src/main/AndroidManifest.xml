<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ambergleam.petfinder">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".PetfinderApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/paw"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ambergleam.petfinder.controller.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.ambergleam.petfinder.controller.DetailActivity"
            android:label="@string/details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity"/>
        </activity>
        <activity
            android:name="com.ambergleam.petfinder.controller.SettingsActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controller.MainActivity"/>
        </activity>
    </application>

</manifest>
