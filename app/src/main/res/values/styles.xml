<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
    </style>

    <style name="DetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/background_detail</item>
    </style>

    <style name="DetailLayoutHorizontal" parent="DetailLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DetailLayoutVertical" parent="DetailLayout">
        <item name="android:orientation">vertical</item>
    </style>

</resources>
