<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="DetailFrameHorizontal" parent="DetailFrame">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DetailFrameVertical" parent="DetailFrame">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DetailFrameLight" parent="DetailFrame">
        <item name="android:background">@color/primary</item>
    </style>

</resources>
