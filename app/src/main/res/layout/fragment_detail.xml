<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/layout_name"
            style="@style/DetailLayoutHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Cleo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_animal"
            style="@style/DetailLayoutHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_animal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Dog"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mix"
            style="@style/DetailLayoutHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_mix"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_mix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Mutt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_age"
            style="@style/DetailLayoutHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_age"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Young"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_size"
            style="@style/DetailLayoutHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Small"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:id="@+id/layout_phone"
            style="@style/DetailLayoutVertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_phone"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:phoneNumber="true"
                android:singleLine="true"
                tools:text="404-421-5787"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_email"
            style="@style/DetailLayoutVertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_email"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:singleLine="true"
                tools:text="ambergleam@gmail.com"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_address"
            style="@style/DetailLayoutVertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/pet_address"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                tools:text="845 Spring St. NW #126\nAtlanta, GA 30308"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:id="@+id/layout_description"
            style="@style/DetailLayout">

            <TextView
                android:id="@+id/pet_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                tools:text="A really cute dog with a great attitude!"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>