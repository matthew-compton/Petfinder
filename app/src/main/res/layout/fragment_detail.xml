<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/layout_name"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_name"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Cleo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_animal"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_animal"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Dog"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_gender"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_gender"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="F"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_size"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_size"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Small"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_age"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_age"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Young"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_status"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_status"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Adopted"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:id="@+id/layout_phone"
            style="@style/DetailFrameHorizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_phone"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pet_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal"
                    android:phoneNumber="true"
                    tools:text="404-421-5787"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_small"
                android:src="@android:drawable/ic_dialog_dialer"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_email"
            style="@style/DetailFrameHorizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_email"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pet_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal"
                    tools:text="ambergleam@gmail.com"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_small"
                android:src="@android:drawable/ic_dialog_email"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_address"
            style="@style/DetailFrameHorizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_address"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal"
                    tools:text="845 Spring St. NW #126\nAtlanta, GA 30308"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_small"
                android:src="@android:drawable/ic_dialog_map"
                android:clickable="true"/>

        </LinearLayout>

        <View
            android:id="@+id/divider_lower"
            style="@style/Divider"/>

        <LinearLayout
            android:id="@+id/layout_description"
            style="@style/DetailFrameVertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_description"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                tools:text="A really cute dog with a great attitude!"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_last_updated"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_updated"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pet_last_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:gravity="right"
                tools:text="Young"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>