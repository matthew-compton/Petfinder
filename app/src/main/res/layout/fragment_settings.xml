<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_animal"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_animal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_size"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_location"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_state"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_state"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_zip"
            style="@style/DetailFrameHorizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pet_zip"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edittext_zip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:singleLine="true"
                android:numeric="integer"
                tools:text="30308"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>